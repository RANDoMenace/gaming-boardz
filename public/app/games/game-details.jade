.container
  h1 {{game.title}}
  .row
    .col-md-6
      h3(ng-show="game.featured") Featured
      h3 Played on {{game.played | date}}
      h3 Winner {{game.winner}}

    .col-md-6
      .panel.panel-primary
        .panel-heading Tags
        .panel-body
          div(ng-repeat="tag in game.tags") {{tag}}
